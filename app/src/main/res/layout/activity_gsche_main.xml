<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".G_sche_main">

    <!-- header -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFD5A2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_mail" />
    </FrameLayout>

    <!-- 캘린더 -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <!-- 일정 -->
    <LinearLayout
        android:id="@+id/scheculeLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calendarView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/calendarView"
        app:layout_constraintEnd_toEndOf="@id/calendarView" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"

            android:text="##/## 일정"
            android:textStyle="bold"
            android:textSize="24dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddSchedule"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="일정 추가하기"
            android:textColor="#FF9800"
            android:textSize="24sp"
            android:background="@drawable/button_orange_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scheculeLine"
        app:layout_constraintStart_toStartOf="@id/scheculeLine"
        app:layout_constraintEnd_toEndOf="@id/scheculeLine"
        android:orientation="vertical">

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            style="@style/scheduleList"
            android:text="치과 정기검진\n11:00 ~ 12:00" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            style="@style/scheduleList"
            android:text="치과 정기검진\n11:00 ~ 12:00" />

    </LinearLayout>

    <!-- 푸터 일정 선택-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 검정 배경 -->
        <View
            android:id="@+id/footer_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="#2C2C2C" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal|bottom" >

            <!-- 캘린더 버튼 (선택됨 - 위로 튀어나옴) -->
            <LinearLayout
                android:id="@+id/nav_calendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 달력 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_calendar_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:contentDescription="캘린더"
                        android:src="@drawable/ic_calendar_red" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 할일 버튼 -->
            <LinearLayout
                android:id="@+id/nav_todo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 종 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_todo_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:contentDescription="할일"
                        android:src="@drawable/ic_bell_yellow" />

                </FrameLayout>

            </LinearLayout>

            <!-- 알림 버튼 -->
            <LinearLayout
                android:id="@+id/nav_notification"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 편지 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_notification_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:contentDescription="알림"
                        android:src="@drawable/ic_letter" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>