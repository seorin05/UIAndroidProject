<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guardian.G_sche_add">

    <!-- header -->
    <FrameLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/header_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FFD5A2" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_mail" />
    </FrameLayout>

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header"
        android:layout_marginTop="100dp"

        style="@style/BoldText"
        android:text="추가할 일정을 알려주세요!"
        android:textSize="26dp" />

    <!--text field-->
    <LinearLayout
        android:id="@+id/todoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainText">

        <TextView
            style="@style/TodoInputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="할 일"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            style="@style/TodoInputField"
            android:id="@+id/et_todo_empty1"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/todoDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todoName">

        <TextView
            style="@style/TodoInputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="날짜"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            style="@style/TodoInputField"
            android:id="@+id/et_todo_empty2"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/todoTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/todoDate">

        <TextView
            style="@style/TodoInputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="시간"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            style="@style/TodoInputField"
            android:id="@+id/et_todo_empty"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"

        style="@style/BtnD"
        android:text="일정 추가하기"

        app:layout_constraintTop_toBottomOf="@id/todoTime"
        app:layout_constraintStart_toStartOf="@id/todoTime"
        app:layout_constraintEnd_toEndOf="@id/todoTime" />

    <!-- 푸터 일정 선택-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 검정 배경 -->
        <View
            android:id="@+id/footer_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="#2C2C2C" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:layout_gravity="center_horizontal|bottom" >

            <!-- 캘린더 버튼 (선택됨 - 위로 튀어나옴) -->
            <LinearLayout
                android:id="@+id/nav_calendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 달력 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_calendar_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:contentDescription="캘린더"
                        android:src="@drawable/ic_calendar_red" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일정"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 할일 버튼 -->
            <LinearLayout
                android:id="@+id/nav_todo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 종 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_todo_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:contentDescription="할일"
                        android:src="@drawable/ic_bell_yellow" />

                </FrameLayout>

            </LinearLayout>

            <!-- 알림 버튼 -->
            <LinearLayout
                android:id="@+id/nav_notification"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 흰색 원형 배경 -->
                    <View
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/circle_white_bg" />

                    <!-- 편지 아이콘 -->
                    <ImageView
                        android:id="@+id/nav_notification_icon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:contentDescription="알림"
                        android:src="@drawable/ic_letter" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>